<div>
    <rs-header ng-if="globals.isLoginChangingForRetailClientEnabled"
               lbtn-class="icon-close"      lbtn-action="goBack()"
               rbtn-class="icon-check-mark" rbtn-action="changeLogin()">Сменить логин</rs-header>
    <rs-header ng-if="!globals.isLoginChangingForRetailClientEnabled"
               lbtn-class="icon-close"      lbtn-action="goBack()">Сменить логин</rs-header>
    <ion-view>
        <ion-content class="has-header">
            <rs-panel>
                <div ng-if="globals.isLoginChangingForRetailClientEnabled" class="rs-content-panel-header text-align-center"
                     style="text-transform: none; text-align: justify;" ng-bind="messageForChangeLogin">
                </div>
                <div class="list-block" style="margin: 0;">
                    <ul>
                        <li>
                            <div class="item-content item-inner">
                                <div class="item-inner">
                                    <div class="table-fixed-width100pc">
                                        <div class="table-row">
                                            <div class="table-cell text-gray text-13px" style="height: 25px;">Логин</div>
                                        </div>
                                        <div class="table-row">
                                            <div class="table-cell" style="height: 25px;">
                                                <input input-clear-btn
                                                       type="text"
                                                       ng-model="user.newLogin"
                                                       style="color: #202426; font-size: 15px; padding: 0; height: 100%; border-bottom: 1px solid rgba(0, 0, 0, 0.16);"
                                                       ng-disabled="!globals.isLoginChangingForRetailClientEnabled">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </rs-panel>
            <div ng-if="!globals.isLoginChangingForRetailClientEnabled" class="inaccessible-data-label">
                Изменение данных временно недоступно
            </div>
        </ion-content>
    </ion-view>
</div>