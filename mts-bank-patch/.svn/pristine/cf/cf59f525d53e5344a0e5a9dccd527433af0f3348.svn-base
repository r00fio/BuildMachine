<div ng-controller="ExtractCategoryCtrl as categoryCtrl">
    <rs-header ng-style="{'background-color': category.color}">{{category.name}}</rs-header>
    <div class="bar bar-subheader disable-user-behavior" ng-style="{'background-color': category.color}">
        <h1 class="title" style="color: white; font-size: 30px;">
            <span ng-show="category.totalCredit" ng-bind="(category.totalCredit | defaultSum)"/>
            <span ng-show="category.totalCredit" class="category-subheader" currency="{{category.currency}}"/>
        </h1>
    </div>
    <ion-view>
        <ion-content class="has-subheader" on-scroll-complete="showMoreOperations()">
            <rs-panel ng-show="extract && extract.operationList && extract.operationList.length > 0"
                      header-text="Операции">
                <rs-operations operations="operationsDisplay" operation-state="operationState" show-search-bar="true"/>
            </rs-panel>
        </ion-content>
    </ion-view>
</div>