<div>
    <rs-header lbtn-class="icon-close"      lbtn-action="goBackFromField()"
               rbtn-class="icon-check-mark" rbtn-action="changeDriverDoc()">Водительское удостоверение</rs-header>
    <ion-view>
        <ion-content class="has-header bg-f0f4f5">
            <rs-panel>
                <div class="list-block" style="margin: 0;">
                    <ul>
                        <li>
                            <div class="item-content">
                                <div class="item-inner">
                                    <div class="item-title label text-15px">Серия</div>
                                    <div class="item-input" style="padding-left: 0;">
                                        <input style="color: #202426; font-size: 15px;"
                                               type="number"
                                               mask-restrict="reject"
                                               mask="9999"
                                               ng-model="retailClient.driverDoc.series"/>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="item-content">
                                <div class="item-inner">
                                    <div class="item-title label text-15px">Номер</div>
                                    <div class="item-input" style="padding-left: 0;">
                                        <input style="color: #202426; font-size: 15px;"
                                               type="number"
                                               mask-restrict="reject"
                                               mask="999999"
                                               ng-model="retailClient.driverDoc.number"/>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="item-content">
                                <div class="item-inner">
                                    <div class="item-title label text-15px">Дата выдачи</div>
                                    <div class="item-input" style="padding-left: 0;">
                                        <input type="text" ng-model="retailClient.driverDoc.deliveryDate" rs-date-picker
                                               style="color: #202426; font-size: 15px; text-align: right;"/>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="rs-button-del flex flex-center flex-middle" ng-click="deleteDriverDoc()">Удалить</div>
            </rs-panel>
        </ion-content>
    </ion-view>
</div>