/* Анимация бубликов в контроле расходов */
.donut-swiper .swiper-slide {
    -webkit-transition: -webkit-transform 0.3s;
    transition: transform 0.3s;
}
.donut-swiper .swiper-slide:not(.swiper-slide-active) {
    -webkit-transform: scale(0.7);
    -ms-transform: scale(0.7);
    transform: scale(0.7);
}